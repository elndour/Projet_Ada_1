WITH Ada.Text_IO, Ada.Float_Text_IO, Ada.Integer_Text_IO, Gestion_Outils;
use Ada.Text_IO, Ada.Float_Text_IO, Ada.Integer_Text_IO, Gestion_Outils;

PACKAGE Gestion_Personnel IS
   N : Constant Integer:= 2;
  Type T_Fonction IS (Analyste,Preleveur);
   S : String(1..9);
   K : Integer;
   TYPE T_Personne IS RECORD
      Identite : T_identite;
      Fonction : T_Fonction;
      Identifiant: integer:=0;
      Nbr_Act_Realiser : Integer:=0;
      Vide : Boolean:=True;
   END RECORD;
   TYPE T_Registre IS ARRAY(1..N) OF T_Personne;
   Function Recherche(Tab : T_Registre; Nom, Prenom : T_Mot;index : integer) RETURN Boolean;
   PROCEDURE Enregistrement(T : IN OUT T_Registre);
   FUNCTION Present(Tab : T_Registre; Nom, Prenom : T_Mot) RETURN Integer;
   PROCEDURE Supprimer(Tab : IN OUT T_Registre; Nom, Prenom : IN T_Mot; A:Integer; Ok:OUT Boolean);
   PROCEDURE Enregistrer_Depart(T : IN OUT T_Registre);
   PACKAGE Fichier_Archives IS NEW Sequential_Io(T_Registre);


END Gestion_Personnel;




