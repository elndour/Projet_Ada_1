   TYPE T_Registre IS ARRAY (1..N) OF T_Identite;

   --Procedure Outils(tab: in out t_registre);

   --PROCEDURE Identite(tab:out t_registre);
   Function Recherche(Tab : T_Registre; Nom, Prenom : T_Mot;index : integer) RETURN Boolean;
   PROCEDURE Enregistrement(T : IN OUT T_Registre);


END Gestion_Outils;




